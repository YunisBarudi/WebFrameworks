extends layout

block content
  .container.mt-5
    video#bg-video(autoplay, muted, loop)
      source(src='/images/about_back.mp4', type='video/mp4')
      Your browser does not support the video tag.
  .content-container
    .container.mt-5
      h1.text-center.mb-4 #{title}
      p.lead.text-center
        | #{welcomeMessage}
      hr.my-4
      .row
        .col-md-6
          h2 #{missionTitle}
          p
            | #{missionText}
        .col-md-6
          img.about-page-image(src=images.mission, alt='Our Mission')
      .row.mt-5
        .col-md-6
          img.about-page-image(src=images.community, alt='Community')
        .col-md-6
          h2 #{communityTitle}
          p
            | #{communityText}
      .row.mt-5
        .col-md-6
          h2 #{stayUpdatedTitle}
          p
            | #{stayUpdatedText}
        .col-md-6
          img.about-page-image(src=images.stayUpdated, alt='Stay Updated')
      .row.mt-5
        .col-md-6
          img.about-page-image(src=images.events, alt='Events')
        .col-md-6
          h2 #{upcomingEventsTitle}
          p
            | #{upcomingEventsText}
      .row.mt-5
        .col-md-12.text-center
          h2 #{joinUsTitle}
          p
            | #{joinUsText}
          a.btn.btn-primary.btn-lg.mt-3.text-white(data-toggle='modal', data-target='#registerModal') Register Now